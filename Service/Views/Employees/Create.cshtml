@model Service.Models.Employee

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Employee Details</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="">
            <div class="panel-body">
                <h4 class="center-block">Personal Information</h4>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">

                        @Html.LabelFor(model => model.First_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.Middle_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Middle_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Middle_Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="row">
                        @Html.LabelFor(model => model.Last_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="row">
                        <h4 class="center-block">Contact Details</h4>
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Email_Id, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Email_Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email_Id, "", new { @class = "text-danger" })
                    </div>


                    <div class="row">
                        @Html.LabelFor(model => model.Mobile_No, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Mobile_No, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mobile_No, "", new { @class = "text-danger" })
                    </div>


                    <div class="row">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-3" })
                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "123 Example St Sydney NSW 2000" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>


                    <div class="panel-body">
                        <h4 class="center-block ">Employee Status</h4>
                    </div>
                    <div class="row">
                        <label class="col-md-6">Employment Type</label>

                    </div>
                    <div class="row">

                        @Html.RadioButtonFor(model => model.Status, true)
                        Parmanent
                        <br />

                        @Html.RadioButtonFor(model => model.Status,false)
                        Contract


                    </div>

                   

                    
                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StartDay, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.EditorFor(model => model.StartDay, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                            @Html.ValidationMessageFor(model => model.StartDay, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StartMonth, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.DropDownListFor(model => model.StartMonth, new SelectList(ViewBag.Months, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StartMonth, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.StartYear, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.EditorFor(model => model.StartYear, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                            @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })

                        </div>


                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.EndDay, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.EditorFor(model => model.EndDay, new { htmlAttributes = new { @class = "form-control col-md-2 EndDay" } })
                            @Html.ValidationMessageFor(model => model.EndDay, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.EndMonth, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.DropDownListFor(model => model.EndMonth, new SelectList(ViewBag.Months, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EndMonth, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.EndYear, htmlAttributes: new { @class = "control-label col-md-3" })
                            @Html.EditorFor(model => model.EndYear, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                            @Html.ValidationMessageFor(model => model.EndYear, "", new { @class = "text-danger" })

                        </div>


                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.OnGoing, htmlAttributes: new { @class = "control-label col-md-3 " })
                          
                        </div>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.OnGoing, new { @class = "form-control col-md-1 OnGoing" })
                            @Html.ValidationMessageFor(model => model.OnGoing, "", new { @class = "text-danger" })
                        </div>
                       

                    </div>




                    <div class="row">
                        <label class="col-md-6">Is this a full-time or part-time basis?</label>
                    </div>
                    <div class="row">

                        @Html.RadioButtonFor(model => model.Emp_Status, true)
                        Full-Time
                        <br />

                        @Html.RadioButtonFor(model => model.Emp_Status, false)

                        Part-Time


                    </div>

                    <div class="row left">
                        @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-md-3" })

                    </div>
                    <div class="row">
                        @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "control-label col-md-1" } })
                        @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })

                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="col-md-3">
                            <input type="button" value="Cancel" class="btn btn-default" />
                        </div>
                    </div>

                </div>
                <div class="col-md-6"></div>
            </div>



        </div>
        <div class=""></div>



    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {
            $('#OnGoing').click(function () {
                if ($('#OnGoing').is(':checked')) {
                    $('#EndDay').prop('disabled', true);
                    $('#EndMonth').prop('disabled', true);
                    $('#EndYear').prop('disabled', true);
                }
                else {
                    $('#EndDay').prop('disabled', false);
                    $('#EndMonth').prop('disabled', false);
                    $('#EndYear').prop('disabled', false);
                }
                
            });
        });
    </script>
}
